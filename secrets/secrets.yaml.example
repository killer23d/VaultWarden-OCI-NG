# VaultWarden-OCI-NG Encrypted Secrets Template
#
# This file is for sensitive values. Use './tools/edit-secrets.sh' to edit.
# Do NOT place non-sensitive defaults here; they belong in the .env file.
#
# --- Core Secrets (Required) ---
# Generate a random token with: openssl rand -base64 48
admin_token: "CHANGE_ME_RANDOM_64_CHARS_FOR_ADMIN_API"
# Generate a random passphrase with: openssl rand -base64 24
backup_passphrase: "CHANGE_ME_RANDOM_32_CHARS_FOR_BACKUP_ENCRYPTION"

# --- Caddy Admin Security (Required) ---
# To generate the ADMIN_BASIC_AUTH_HASH, run:
#   docker run --rm caddy caddy hash-password --plaintext 'YourSecurePassword'
# Then copy the resulting hash into the value field below.
admin_basic_auth_hash: "CHANGE_ME_PASTE_CADDY_HASH_HERE"

# --- Email/SMTP Configuration (Required for notifications) ---
smtp_host: "smtp.example.com"
smtp_from: "vaultwarden@example.com"
smtp_port: "587"
smtp_security: "starttls" # Or ssl, none
smtp_username: "YourSmtpUsername"
smtp_password: "YourSmtpAppPassword"

# --- Cloudflare API (Optional - for DDClient or Fail2ban) ---
cloudflare_api_token: "" # Paste your Cloudflare API Token here if using DDClient/Fail2ban Cloudflare action

# --- Push Notifications (Optional) ---
# Get these values from https://bitwarden.com/host
push_installation_id: ""
push_installation_key: ""
